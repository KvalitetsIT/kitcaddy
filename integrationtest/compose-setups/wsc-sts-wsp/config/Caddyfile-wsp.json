{
  "logging": {
    "logs": {
      "default": {
        "level": "DEBUG"
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "srv80": {
          "listen": [
            ":80"
          ],
          "logs": {
          },
          "strict_sni_host": false,
          "automatic_https": {
            "disable_redirects": true
          },
          "routes": [
            {
              "match": [
                {
                  "path": [
                    "/*"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "oioidwsrestwsp",
                  "mongo_host": "mongo",
                  "mongo_db": "mongodb",
                  "trust_cert_files": [
                    "/trust/sts.cer"
                  ],
                  "audience_restriction": "teststs",
                  "hok": "true"
                },
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "read_buffer_size": 4096
                  },
                  "upstreams": [
                    {
                      "dial": "http://localhost:8888"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}
